    "/getEvent/{eventId}": {
      "get": {
        "tags": [
          "Events"
        ],
        "summary": "Fetches the chosen event.",
        "description": "Fetches the chosen event with its ticket.",
        "parameters": [
          {
            "name": "Cookie",
            "in": "header",
            "description": "User ID",
            "required": true,
            "schema": {
              "type": "string",
              "properties": "userSessionCookie=session_cookie"
            }
          },
          {
            "in": "path",
            "name": "eventId",
            "schema": {
              "type": "string"
            },
            "description": "The event id."
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "$ref": "#/components/schemas/SingleEvent"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/similarEvents": {
      "get": {
        "tags": [
          "Events"
        ],
        "summary": "Fetches similar events.",
        "description": "Fetches similar events with the same categories, location-category, as chosen Event.",
        "parameters": [
          {
            "name": "Cookie",
            "in": "header",
            "description": "User ID",
            "required": true,
            "schema": {
              "type": "string",
              "properties": "userSessionCookie=session_cookie"
            }
          },
          {
            "in": "query",
            "name": "eventId",
            "schema": {
              "type": "string"
            },
            "description": "The event id."
