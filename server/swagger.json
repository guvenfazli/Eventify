{
  "openapi": "3.0.0",
  "info": {
    "title": "Eventify API Documentation",
    "version": "1.0.0",
    "description": "API documentation for FullStack Application Eventify"
  },
  "servers": [
    {
      "url": "http://localhost:8080",
      "description": "Local server"
    }
  ],
  "paths": {
    "/auth/createAccount": {
      "post": {
        "tags": [
          "Authentication"
        ],
        "summary": "Creates an Account.",
        "description": "Creates a new account for the application.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "example": "John Marshall Doe"
                  },
                  "email": {
                    "type": "string",
                    "example": "test@test.com"
                  },
                  "password": {
                    "type": "string",
                    "example": "testpassword12345"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success message from Backend.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Account created successfully!"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/auth/loginAccount": {
      "post": {
        "tags": [
          "Authentication"
        ],
        "summary": "Account Logging In.",
        "description": "Loggs in with an existing account.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "example": "test@test.com"
                  },
                  "password": {
                    "type": "string",
                    "example": "testpassword12345"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success message from Backend.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Login successfull!"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/beInterested/{eventId}": {
      "post": {
        "tags": [
          "Events"
        ],
        "summary": "Adds an Event to Interested List.",
        "description": "Adds the chosen event to the logged users interested events list.",
        "parameters": [
          {
            "name": "Cookie",
            "in": "header",
            "description": "User ID",
            "required": true,
            "schema": {
              "type": "string",
              "properties": "userSessionCookie=session_cookie"
            }
          },
          {
            "in": "path",
            "name": "eventId",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Chosen events ID"
          }
        ],
        "responses": {
          "200": {
            "description": "Success message from Backend.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "You are now interested with this event!"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/buyTicket/{ticketId}": {
      "post": {
        "tags": [
          "Tickets"
        ],
        "summary": "Buys Ticket",
        "description": "Buys the chosen events ticket with unique ticket ID.",
        "parameters": [
          {
            "name": "Cookie",
            "in": "header",
            "description": "User ID",
            "required": true,
            "schema": {
              "type": "string",
              "properties": "userSessionCookie=session_cookie"
            }
          },
          {
            "in": "path",
            "name": "ticketId",
            "schema": {
              "type": "string"
            },
            "description": "The chosen events ticket ID."
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "fullName": {
                    "type": "string",
                    "example": "John Doe"
                  },
                  "email": {
                    "type": "string",
                    "example": "john@doe.com",
                    "format": "email"
                  },
                  "ticketQuantity": {
                    "type": "integer",
                    "example": 5
                  },
                  "totalPrice": {
                    "type": "integer",
                    "example": 500
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success message from Backend.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Thank you for choosing Eventify!"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/trendingWorldEvents": {
      "get": {
        "tags": [
          "Events"
        ],
        "summary": "Fetches events.",
        "description": "Fetches the events from around the world with highest interest rates.",
        "parameters": [
          {
            "name": "Cookie",
            "in": "header",
            "description": "User ID",
            "required": true,
            "schema": {
              "type": "string",
              "properties": "userSessionCookie=session_cookie"
            }
          },
          {
            "in": "query",
            "name": "page",
            "schema": {
              "type": "integer"
            },
            "description": "How many items will be return"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "$ref": "#/components/schemas/Event"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/upcomingEvents": {
      "get": {
        "tags": [
          "Events"
        ],
        "summary": "Fetches events.",
        "description": "Fetches upcoming events based on the timespan.",
        "parameters": [
          {
            "name": "Cookie",
            "in": "header",
            "description": "User ID",
            "required": true,
            "schema": {
              "type": "string",
              "properties": "userSessionCookie=session_cookie"
            }
          },
          {
            "in": "query",
            "name": "page",
            "schema": {
              "type": "integer"
            },
            "description": "How many items will be return"
          },
          {
            "in": "query",
            "name": "start",
            "schema": {
              "type": "integer"
            },
            "description": "Starting day, being used for tomorrow."
          },
          {
            "in": "query",
            "name": "end",
            "schema": {
              "type": "integer"
            },
            "description": "How many days should be added on today."
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "$ref": "#/components/schemas/Event"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/bestFreeEvents": {
      "get": {
        "tags": [
