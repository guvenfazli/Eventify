    "/myTickets": {
      "get": {
        "tags": [
          "Tickets"
        ],
        "summary": "Fetches users tickets.",
        "description": "Fetches the tickets that the user bought.",
        "parameters": [
          {
            "name": "Cookie",
            "in": "header",
            "description": "User ID",
            "required": true,
            "schema": {
              "type": "string",
              "properties": "userSessionCookie=session_cookie"
